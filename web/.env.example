# Database - PostgreSQL (Prisma)
DATABASE_URL="postgresql://user:password@host:5432/database"

# Supabase - Authentication
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Admin - Basic auth password for admin routes
ADMIN_BASIC_PASSWORD=your_secure_admin_password

# Umami Analytics (optional) - URL points to your Umami server
NEXT_PUBLIC_UMAMI_WEBSITE_ID=
NEXT_PUBLIC_UMAMI_URL=http://localhost:3001

# Site URL - Used for metadata and OG tags
NEXT_PUBLIC_SITE_URL=http://localhost:3000
