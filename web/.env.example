# Database - PostgreSQL (Prisma)
DATABASE_URL="postgresql://user:password@host:5432/database"

# BetterAuth - MySQL database for authentication
AUTH_MYSQL_URL="mysql://user:password@host:port/database"

# BetterAuth - Secret key for session encryption
BETTER_AUTH_SECRET="generate-a-random-32-char-secret"

# Resend - Email service for magic links
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Admin - Basic auth password for admin routes
ADMIN_BASIC_PASSWORD=your_secure_admin_password

# Umami Analytics (optional) - URL points to your Umami server
NEXT_PUBLIC_UMAMI_WEBSITE_ID=
NEXT_PUBLIC_UMAMI_URL=http://localhost:3001

# Site URL - Used for metadata and OG tags
NEXT_PUBLIC_SITE_URL=http://localhost:3000
