# ==============================================================================
# Worker Environment Variables
# ==============================================================================
# Copy this file to .env and fill in the values.
# ==============================================================================

# PostgreSQL (Supabase)
DATABASE_URL=postgresql://postgres.[ref]:[password]@aws-[region].pooler.supabase.com:6543/postgres

# Airflow Admin
ADMIN_BASIC_PASSWORD=CHANGEME

# AI Services
OPENROUTER_API_KEY=CHANGEME
MISTRAL_API_KEY=CHANGEME

# Airflow Database (MySQL)
# Format: mysql+pymysql://user:password@host:port/database
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=mysql+pymysql://user:password@host:3306/airflow

# Airflow Security (required for production)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AIRFLOW__CORE__FERNET_KEY=CHANGEME
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
AIRFLOW__WEBSERVER__SECRET_KEY=CHANGEME

# Airflow Configuration
AIRFLOW__CORE__EXECUTOR=SequentialExecutor
AIRFLOW__CORE__LOAD_EXAMPLES=False