# ==============================================================================
# Paper Summarizer Environment Configuration
# ==============================================================================
# Copy this file to .env and fill in the values.
# All variables marked CHANGEME must be updated before running.
# ==============================================================================

# ==============================================================================
# PORTS
# ==============================================================================
# Host ports for accessing services from your machine
HOSTPORT_FRONTEND=3000
HOSTPORT_AIRFLOW=8080
HOSTPORT_QDRANT=6333
HOSTPORT_QDRANT_GRPC=6334
HOSTPORT_UMAMI=3001

# Container ports (internal)
CONTAINERPORT_QDRANT=6333
CONTAINERPORT_QDRANT_GRPC=6334

# ==============================================================================
# NEXT.JS WEB SERVICE
# ==============================================================================
# Base URL for the web application (used for OAuth callbacks, emails, etc.)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# BetterAuth secret key for session encryption (generate a random 32+ char string)
BETTER_AUTH_SECRET=CHANGEME

# Admin credentials for protected API endpoints (HTTP Basic Auth)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGEME

# ==============================================================================
# AI SERVICES
# ==============================================================================
OPENROUTER_API_KEY=CHANGEME
MISTRAL_API_KEY=CHANGEME

# ==============================================================================
# TRANSACTIONAL EMAIL
# ==============================================================================
RESEND_API_KEY=CHANGEME

# ==============================================================================
# MYSQL WORKFLOW DATABASE
# ==============================================================================
# Main database for papers, users, and application data
MYSQL_DATABASE=workflow_db
MYSQL_USER=workflow_user
MYSQL_PASSWORD=CHANGEME
MYSQL_ROOT_PASSWORD=CHANGEME
MYSQL_HOST=mysql

# Prisma connection URL (constructed from above variables in docker-compose)
# For local development outside Docker, use: mysql://workflow_user:password@localhost:3306/workflow_db
DATABASE_URL=mysql://${MYSQL_USER}:${MYSQL_PASSWORD}@${MYSQL_HOST}:3306/${MYSQL_DATABASE}

# ==============================================================================
# MYSQL AUTH DATABASE
# ==============================================================================
# Separate database for BetterAuth authentication data
AUTH_MYSQL_DATABASE=auth_db
AUTH_MYSQL_USER=auth_user
AUTH_MYSQL_PASSWORD=CHANGEME
AUTH_MYSQL_ROOT_PASSWORD=CHANGEME

# BetterAuth database URL
AUTH_DATABASE_URL=mysql://${AUTH_MYSQL_USER}:${AUTH_MYSQL_PASSWORD}@mysql_auth:3306/${AUTH_MYSQL_DATABASE}

# ==============================================================================
# UMAMI ANALYTICS
# ==============================================================================
UMAMI_DB_NAME=umami
UMAMI_DB_USER=umami
UMAMI_DB_PASSWORD=CHANGEME
UMAMI_APP_SECRET=CHANGEME
NEXT_PUBLIC_UMAMI_URL=http://localhost:3001
NEXT_PUBLIC_UMAMI_WEBSITE_ID=your-website-id-from-umami-dashboard

# ==============================================================================
# QDRANT VECTOR DATABASE
# ==============================================================================
QDRANT_HOST=qdrant
QDRANT_PORT=6333